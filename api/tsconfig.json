{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext", // it seems SWC will handle it based on the target in .swcrc
		"moduleResolution": "Node16",
		"module": "esnext",
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"sourceMap": true,
		"composite": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"dist",
		"node_modules",
	]
}
